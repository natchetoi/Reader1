<core:View xmlns:core="sap.ui.core"
           xmlns:mvc="sap.ui.core.mvc"
           xmlns:l="sap.ui.layout"
           xmlns:html="http://www.w3.org/1999/xhtml"
           xmlns="sap.m" xmlns:tnt="sap.tnt"
           controllerName="Reader1.view.Main">
    <Page title="Title" showNavButton="false">
        <customHeader>
            <Bar>
                <contentLeft>
                    <Button icon="sap-icon://menu2"
                            press="onToggleMenu"/>
                </contentLeft>
                <contentMiddle>
                    <Text text="Reader"/>
                </contentMiddle>
                <contentRight>
                    <MenuButton icon="sap-icon://user-settings">
                        <menu>
                            <Menu itemSelected="onMenuAction">
                                <items>
                                    <MenuItem text="Settings" icon="sap-icon://action-settings"/>
                                    <MenuItem text="Logout"/>
                                </items>
                            </Menu>
                        </menu>
                    </MenuButton>
                </contentRight>
            </Bar>
        </customHeader>
        <content>

            <l:FixFlex vertical="false">
                <l:fixContent>
                    <tnt:NavigationList id="contentMenu" expanded="false" itemSelect="onMenuItemSelected">
                    </tnt:NavigationList>
                </l:fixContent>
                <l:flexContent>
                    <Panel id="_panelContent" width="100%" class="sapUiNoContentPadding"></Panel>
                </l:flexContent>
            </l:FixFlex>
        </content>
        <footer>
            <Bar>
                <contentLeft>
                    <MenuButton icon="sap-icon://zoom-in">
                        <menu>
                            <Menu>
                                <items>
                                    <MenuItem text="Zoom In" icon="sap-icon://zoom-in"/>
                                    <MenuItem text="Zoom Out" icon="sap-icon://zoom-out"/>
                                </items>
                            </Menu>
                        </menu>
                    </MenuButton>
                    <Button icon="sap-icon://search"/>
                    <Button icon="sap-icon://bookmark"/>
                    <Button icon="sap-icon://share-2"/>

                </contentLeft>
                <contentRight>
                    <Button icon="sap-icon://full-screen"/>
                </contentRight>
            </Bar>
        </footer>
    </Page>
</core:View>
