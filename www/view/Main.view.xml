<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
           xmlns:html="http://www.w3.org/1999/xhtml"
           xmlns="sap.m" xmlns:tnt="sap.tnt"
           controllerName="Reader1.view.Main">
    <Page title="Title" showNavButton="false">
        <customHeader>
            <Bar>
                <contentLeft>
                    <Button icon="sap-icon://menu2"
                              press="onToggleMenu" />
                </contentLeft>
                <contentMiddle>
                    <Text text="Reader"/>
                </contentMiddle>
                <contentRight>
                    <MenuButton icon="sap-icon://user-settings">
                        <menu>
                            <Menu itemSelected="onMenuAction">
                                <items>
                                    <MenuItem text="Settings" icon="sap-icon://action-settings"/>
                                    <MenuItem text="Logout"/>
                                </items>
                            </Menu>
                        </menu>
                    </MenuButton>
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <tnt:NavigationList id="contentMenu" expanded="false">
                <tnt:NavigationListItem
                        text="Item 1"
                        icon="sap-icon://employee">
                    <tnt:NavigationListItem text="Sub Item 1">
                    </tnt:NavigationListItem>
                    <tnt:NavigationListItem text="Sub Item 2">
                    </tnt:NavigationListItem>
                    <tnt:NavigationListItem text="Sub Item 3">
                    </tnt:NavigationListItem>
                    <tnt:NavigationListItem text="Sub Item 4">
                    </tnt:NavigationListItem>
                </tnt:NavigationListItem>
                <tnt:NavigationListItem
                        text="Item 2"
                        icon="sap-icon://building">
                    <tnt:NavigationListItem text="Sub Item 1">
                    </tnt:NavigationListItem>
                    <tnt:NavigationListItem text="Sub Item 2">
                    </tnt:NavigationListItem>
                    <tnt:NavigationListItem text="Sub Item 3">
                    </tnt:NavigationListItem>
                    <tnt:NavigationListItem text="Sub Item 4">
                    </tnt:NavigationListItem>
                </tnt:NavigationListItem>
            </tnt:NavigationList>
            <Panel id="_panelContent"></Panel>
        </content>
        <footer>
            <Bar>
                <contentLeft>
                    <MenuButton icon="sap-icon://zoom-in">
                        <menu>
                            <Menu>
                                <items>
                                    <MenuItem text="Zoom In" icon="sap-icon://zoom-in"/>
                                    <MenuItem text="Zoom Out" icon="sap-icon://zoom-out"/>
                                </items>
                            </Menu>
                        </menu>
                    </MenuButton>
                    <Button icon="sap-icon://search"/>
                    <Button icon="sap-icon://bookmark"/>
                    <Button icon="sap-icon://share-2"/>

                </contentLeft>
                <contentRight>
                    <Button icon="sap-icon://full-screen"/>
                </contentRight>
            </Bar>
        </footer>
    </Page>
</core:View>
